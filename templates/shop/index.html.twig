{% extends 'base.html.twig' %}

{% block title %}Hello ShopController!{% endblock %}

{% block body %}
<!-- Hero
		================================================== -->

<div class="section over-hide padding-top-120 padding-top-mob-nav pb-5 section-background-20 background-img-top">
    <div class="section-1400 pt-xl-4">
        <div class="container-fluid padding-top-bottom-80">
            <div class="row">
                <div class="col-lg">
                    <h2 class="display-8 mb-3">
                        Shop 2 columns
                    </h2>
                    <p class="lead mb-0 title-text-left-line-small">
                        A clean layout for a stylish e-commerce.
                    </p>
                </div>
                <div class="col-lg-auto align-self-center mt-4 mt-lg-0">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb no-border">
                            <li class="breadcrumb-item"><a href="#" class="link link-dark-primary size-14"
                                    data-hover="Home">Home</a></li>
                            <li class="breadcrumb-item active font-weight-500" aria-current="page"><span
                                    class="size-14">Shop</span></li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="section-1400">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-12 col-lg-10 col-xl-8">
                    <div class="row">
                        <div class="col-12 text-left pb-4">
                            <button class="btn btn-filter-tag-small font-weight-700 filter mr-3 position-relative"
                                data-filter="all">all categories<span
                                    class="btn-filter-icon-small bg-dark color-white">12</span></button>
                            <button class="btn btn-filter-tag-small font-weight-700 filter mr-3 position-relative"
                                data-filter=".man">man <span
                                    class="btn-filter-icon-small bg-dark color-white">2</span></button>
                            <button class="btn btn-filter-tag-small font-weight-700 filter mr-3 position-relative"
                                data-filter=".woman">woman <span
                                    class="btn-filter-icon-small bg-dark color-white">10</span></button>
                            <button class="btn btn-filter-tag-small font-weight-700 filter mr-3 position-relative"
                                data-filter=".tops">tops <span
                                    class="btn-filter-icon-small bg-dark color-white">3</span></button>
                            <button class="btn btn-filter-tag-small font-weight-700 filter mr-3 position-relative"
                                data-filter=".jeans">jeans <span
                                    class="btn-filter-icon-small bg-dark color-white">4</span></button>
                            <button class="btn btn-filter-tag-small font-weight-700 filter mr-3 position-relative"
                                data-filter=".dresses">dresses <span
                                    class="btn-filter-icon-small bg-dark color-white">4</span></button>
                            <button class="btn btn-filter-tag-small font-weight-700 filter position-relative"
                                data-filter=".jackets">jackets <span
                                    class="btn-filter-icon-small bg-dark color-white">4</span></button>
                        </div>
                    </div>
                    <div class="row shop-mix-wrapper-1">
                        <div class="col-sm-6 pb-4 shop-mix-wrap-1 woman jeans jackets">
                            <div class="section shop-wrap-3 img-wrap border-4">
                                <img class="border-4"
                                    src="img/webiste/bracelet-constella--blanc--placage-de-ton-or-swarovski-5683359.avif"
                                    alt="">
                                <div class="shop-wrap-2-left">
                                    <div class="shop-wrap-2-left-circle bg-orange color-white size-13 font-weight-600">
                                        -25%</div>
                                </div>
                                <div class="shop-wrap-2-right">
                                    <a href="img/product-14.jpg" class="shop-wrap-2-right-circle" data-fancybox=""><i
                                            class="uil uil-search size-16"></i></a>
                                    <a href="product-1.html" class="shop-wrap-2-right-circle animsition-link mt-2"><i
                                            class="uil uil-plus size-16"></i></a>
                                    <a href="#" class="shop-wrap-2-right-circle mt-2"><i
                                            class="uil uil-heart size-16"></i></a>
                                </div>
                                <div class="shop-wrap-2-text">
                                    <div class="shop-wrap-2-size">
                                        <p class="mb-0 color-white text-uppercase size-13 font-weight-600">
                                            <span class="mx-1">s</span><span class="mx-1">m</span><span
                                                class="mx-1">l</span><span class="mx-1">xl</span>
                                        </p>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <h6 class="mb-2">
                                                <a href="product-1.html" class="link-heading animsition-link">Your
                                                    product title</a>
                                            </h6>
                                            <p class="lead mb-1 font-weight-600">
                                                <span class="text-line-through mr-1">$237</span> <span
                                                    class="color-primary">$169</span>
                                            </p>
                                            <p class="mb-0 color-yellow">
                                                <i class="uil uil-star"></i>
                                                <i class="uil uil-star"></i>
                                                <i class="uil uil-star"></i>
                                                <i class="uil uil-star"></i>
                                                <i class="uil uil-star"></i>
                                            </p>
                                        </div>
                                        <div class="col-auto align-self-center">
                                            <p class="mb-0">
                                                <a href="cart.html" class="link-heading animsition-link">
                                                    <i class="uil uil-cart size-28"></i>
                                                    <span class="btn-small-icon bg-dark-blue color-white">+</span>
                                                </a>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="section-1400">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-12 pt-4">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-center">
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1" aria-disabled="true">
                                    <span aria-hidden="true"><i class="uil uil-arrow-left"></i></span>
                                </a>
                            </li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Next">
                                    <span aria-hidden="true"><i class="uil uil-arrow-right"></i></span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- section
		================================================== -->

<div class="section over-hide padding-bottom-120 pt-5 section-background-24">
    <div class="section-1400">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-sm-7 col-md-4">
                    <a href="shop-4-col.html" class="animsition-link">
                        <div class="section shop-wrap-1 border-4 over-hide img-wrap">
                            <img src="img/shop-8.jpg" alt="">
                            <div class="shop-over-text bg-white">
                                <p class="mb-0 size-12 font-weight-700 text-uppercase color-blue letter-spacing-1">
                                    splash sale</p>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-sm-7 col-md-4 mt-4 mt-md-0">
                    <a href="shop-4-col.html" class="animsition-link">
                        <div class="section shop-wrap-1 border-4 over-hide img-wrap">
                            <img src="img/shop-9.jpg" alt="">
                            <div class="shop-over-text bottom-left bg-white">
                                <p class="mb-0 size-12 font-weight-700 text-uppercase color-purple letter-spacing-1">
                                    served collection</p>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-sm-7 col-md-4 mt-4 mt-md-0">
                    <a href="shop-4-col.html" class="animsition-link">
                        <div class="section shop-wrap-1 border-4 over-hide img-wrap">
                            <img src="img/shop-10.jpg" alt="">
                            <div class="shop-over-text bottom-right bg-white">
                                <p class="mb-0 size-12 font-weight-700 text-uppercase color-warning letter-spacing-1">
                                    winter love</p>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}